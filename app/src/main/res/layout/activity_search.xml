<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#101010"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchActivity">
<EditText
    android:textColor="#ffff"
    android:id="@+id/editextSearch"
    android:textColorHint="#515050"
    android:hint="Nhập tìm kiếm của bạn tại đây"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/backgrow_button_login"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phim được tìm kiếm"
        android:textColor="#ffff"
        android:textSize="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclersearch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chương trình được tìm thấy"
        android:textColor="#ffff"
        android:textSize="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclersearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>