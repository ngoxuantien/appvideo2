<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_image"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141516"
    android:orientation="vertical"
    tools:context=".Activity.MovieDetails">

    <ImageView
        android:id="@+id/movie_image_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movie_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Shazam"
                        android:textColor="#FF5722"
                        android:textSize="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/movie_image_detail"
                        tools:layout_editor_absoluteX="24dp" />


                    <TextView
                        android:id="@+id/movieTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shazam"
                        android:textColor="#ffff" />
                </LinearLayout>


                <Button
                    android:id="@+id/play_button"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/play_btn_bg"
                    android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
                    android:padding="1dp"
                    android:text="Start Video"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="219dp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:textColor="#ffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng"
                    android:textColor="#ffff" />

                <TextView
                    android:id="@+id/timemovie"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="120"
                    android:textColor="#ffff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Phút"
                    android:textColor="#ffff"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Thể loại"
                    android:textColor="#ffff" />

                <TextView
                    android:id="@+id/movieCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trinh thám"
                    android:textColor="#ffff" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Chấm điểm"
                    android:textColor="#ffff" />

                <TextView
                    android:id="@+id/movievote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.9/9000"
                    android:textColor="#ffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="số tập"
                    android:textColor="#ffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#ffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Phát hành"
                    android:textColor="#ffff" />

                <TextView
                    android:id="@+id/movieDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/10/2021"
                    android:textColor="#ffff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theo dõi"
                        android:textColor="#ffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/dollar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua Phim"
                        android:textColor="#ffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chia sẻ"
                        android:textColor="#ffff" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Diễn viên"
                android:textColor="#ffff" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/castrecyclerview"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tóm tắt"
                android:textColor="#ffff" />

            <TextView
                android:id="@+id/movieSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đó là 1 bộ phim rất hay nói về nhiều người trong xã hội "
                android:textColor="#ffff" />

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:textColor="#ffff"
                android:text="Phim liên quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/relatedlistmovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>





    
   

</LinearLayout>